<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tryıkvm" default="compile.module.tryıkvm">
  <dirname property="module.tryıkvm.basedir" file="${ant.file.module_tryıkvm}"/>
  
  <property name="module.jdk.home.tryıkvm" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tryıkvm" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tryıkvm" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tryıkvm" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="tryıkvm.output.dir" value="${module.tryıkvm.basedir}/out/production/tryIkvm"/>
  <property name="tryıkvm.testoutput.dir" value="${module.tryıkvm.basedir}/out/test/tryIkvm"/>
  
  <path id="tryıkvm.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tryıkvm.module.production.classpath">
    <path refid="${module.jdk.classpath.tryıkvm}"/>
    <path refid="library.scriptcs.embedded.classpath"/>
    <path refid="library.jni4net.j-0.8.8.0.classpath"/>
  </path>
  
  <path id="tryıkvm.runtime.production.module.classpath">
    <pathelement location="${tryıkvm.output.dir}"/>
    <path refid="library.scriptcs.embedded.classpath"/>
    <path refid="library.jni4net.j-0.8.8.0.classpath"/>
  </path>
  
  <path id="tryıkvm.module.classpath">
    <path refid="${module.jdk.classpath.tryıkvm}"/>
    <pathelement location="${tryıkvm.output.dir}"/>
    <path refid="library.scriptcs.embedded.classpath"/>
    <path refid="library.jni4net.j-0.8.8.0.classpath"/>
  </path>
  
  <path id="tryıkvm.runtime.module.classpath">
    <pathelement location="${tryıkvm.testoutput.dir}"/>
    <pathelement location="${tryıkvm.output.dir}"/>
    <path refid="library.scriptcs.embedded.classpath"/>
    <path refid="library.jni4net.j-0.8.8.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tryıkvm">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tryıkvm">
    <patternset refid="excluded.from.module.tryıkvm"/>
  </patternset>
  
  <path id="tryıkvm.module.sourcepath">
    <dirset dir="${module.tryıkvm.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tryıkvm" depends="compile.module.tryıkvm.production,compile.module.tryıkvm.tests" description="Compile module tryIkvm"/>
  
  <target name="compile.module.tryıkvm.production" depends="register.custom.compilers" description="Compile module tryIkvm; production classes">
    <mkdir dir="${tryıkvm.output.dir}"/>
    <javac2 destdir="${tryıkvm.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tryıkvm}/javac">
      <compilerarg line="${compiler.args.tryıkvm}"/>
      <bootclasspath refid="tryıkvm.module.bootclasspath"/>
      <classpath refid="tryıkvm.module.production.classpath"/>
      <src refid="tryıkvm.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tryıkvm"/>
    </javac2>
    
    <copy todir="${tryıkvm.output.dir}">
      <fileset dir="${module.tryıkvm.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tryıkvm.tests" depends="register.custom.compilers,compile.module.tryıkvm.production" description="compile module tryIkvm; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tryıkvm" description="cleanup module">
    <delete dir="${tryıkvm.output.dir}"/>
    <delete dir="${tryıkvm.testoutput.dir}"/>
  </target>
</project>